// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  INVESTOR
  OWNER
  ADMIN
}

enum PropertyStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum OrderStatus {
  PENDING
  PAID
  ISSUED
  CANCELLED
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  name          String?
  role          Role           @default(INVESTOR)
  orders        Order[]
  holdings      Holding[]
  distributions Distribution[]
  certificates  Certificate[]
  createdAt     DateTime       @default(now())

  // Add these lines:
  wallet       Wallet?
  transactions Transaction[]
  bankLinks    BankLink[]
}

model Property {
  id              Int            @id @default(autoincrement())
  title           String
  totalValue      Float
  tokenPrice      Float
  totalTokens     Int
  remainingTokens Int
  monthlyYield    Float
  status          PropertyStatus @default(DRAFT)
  blockchainTxId  String?
  orders          Order[]
  holdings        Holding[]
  payouts         Payout[]
  certificates    Certificate[]
  createdAt       DateTime       @default(now())
}

model Order {
  id         Int         @id @default(autoincrement())
  userId     Int
  propertyId Int
  tokens     Int
  amount     Float
  status     OrderStatus @default(PENDING)
  createdAt  DateTime    @default(now())

  user        User         @relation(fields: [userId], references: [id])
  property    Property     @relation(fields: [propertyId], references: [id])
  certificate Certificate?
}

model Holding {
  id         Int      @id @default(autoincrement())
  userId     Int
  propertyId Int
  tokens     Int
  createdAt  DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id])
  property Property @relation(fields: [propertyId], references: [id])

  @@unique([userId, propertyId])
}

model Payout {
  id          Int      @id @default(autoincrement())
  propertyId  Int
  month       String
  totalAmount Float
  createdAt   DateTime @default(now())

  property      Property       @relation(fields: [propertyId], references: [id])
  distributions Distribution[]
}

model Distribution {
  id        Int      @id @default(autoincrement())
  payoutId  Int
  userId    Int
  amount    Float
  createdAt DateTime @default(now())

  payout Payout @relation(fields: [payoutId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
}

model Certificate {
  id         Int      @id @default(autoincrement())
  code       String   @unique
  userId     Int
  propertyId Int
  orderId    Int      @unique
  blockchainTxId String?
  createdAt  DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id])
  property Property @relation(fields: [propertyId], references: [id])
  order    Order    @relation(fields: [orderId], references: [id])
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  TOKEN_MINT
  TOKEN_TRANSFER
  DISTRIBUTION
}

model Wallet {
  id          Int      @id @default(autoincrement())
  walletId    String   @unique @default(uuid())
  userId      Int      @unique
  cashBalance Float    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model Transaction {
  id        Int             @id @default(autoincrement())
  userId    Int
  type      TransactionType
  amount    Float
  ref       String?
  note      String?
  blockchainTxId String?
  createdAt DateTime        @default(now())

  user User @relation(fields: [userId], references: [id])
}

enum OnChainEventType {
  TOKEN_MINT
  TOKEN_TRANSFER
  DISTRIBUTION
}

model OnChainEvent {
  id          Int              @id @default(autoincrement())
  txId        String           @unique
  type        OnChainEventType
  userId      Int?
  propertyId  Int?
  orderId     Int?
  payload     Json?
  createdAt   DateTime         @default(now())
}

model BankLink {
  id         Int      @id @default(autoincrement())
  userId     Int
  provider   String
  status     String
  externalId String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}
